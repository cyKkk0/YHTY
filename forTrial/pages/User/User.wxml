<!-- 已登陆 -->
<view class="top_root" wx:if="{{user&&user.nickname}}">
	<image class="top_img" src="{{user.avatarUrl}}"></image>
	<view>
		<view class="top_name">{{user.nickname}}</view>
		<view class="login_out" bindtap="loginOUT">退出登陆</view>
	</view>
</view>
<!-- 未登陆 -->
<view wx:else class="top_root">
	<image class="top_img" src="https://www.teasoo.com/public/Wap/images/avatar.jpg"></image>
	<view>
		<view class="top_name">{{user.name}}</view>
		<view class="" bindtap="login">点击登录</view>
	</view>
</view>



