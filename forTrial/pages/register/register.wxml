<form bindsubmit="register">

<view class="root">
	<view class="item">
		<text>手机:</text>
		<input placeholder="请输入您的手机号" name="phone"></input>
	</view>
	<view class="item">
		<text>密码:</text>
		<input placeholder="请输入您的密码" name="password"></input>
	</view>
	<view class="item">
		<text>再次确认密码:</text>
		<input placeholder="请输入您的密码" name="password"></input>
	</view>
	<view class="item">
		<text>性别:</text>
		<input placeholder="请输入您的性别" name="gender"></input>
	</view>
	<view class="item">
		<text>姓名:</text>
		<input placeholder="请输入您的姓名" name="name"></input>
	</view>

	<button class="btn" form-type="submit">注册</button>
